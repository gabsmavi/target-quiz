def interruptores():
    # estado neutro
    interruptores = ["Interruptor 1", "Interruptor 2", "Interruptor 3"]
    lampadas = [None, None, None]  

    # ligar o interruptor da lampada 1 e dedsligeu
    lampadas[0] = "quente"  

    # ligar a interruptor da lampada 2 e deixar
    lampadas[1] = "acesa" 

    # deixar o interruptor 3 desligado
    lampadas[2] = "apagada"

    print("Lâmpadas:")
    for i in range(3):
        print(f"{O interruptor[i]} controla a lâmpada que está {lampadas[i]}.")

# Executar o código
descobrir_interruptores()
