1)
def eh_fib(num):
    a, b = 0, 1
    while a <= n:
        if a == n:
            print(f"{num} é um número Fibonacci")
        a, b = b, a + b
    print(f"{num} não é um número Fibonacci")

# Testando o código
num1 = int(input("Digite um número: "))
print(eh_fib(num1))


2)
def letra_a(texto):
   # converter para minusculo
   contagem = texto.lower().count('a')
    
    if contagem > 0:
        print(f"A letra 'a' aparece {contagem} vezes")
    else:
        print(f"A letra 'a' não aparece.")

texto = input("Digite um texto: ")
print(letra_a(texto))


