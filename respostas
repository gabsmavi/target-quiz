indice = 12
soma = 0
K = 1
while K < indice:
    K = K + 1
    soma = soma + K
print(f'A soma final é {SOMA}')

4)
def sequencias():
    # numeros impares consecutivos
    a = [1, 3, 5, 7]
    a.append(a[-1] + 2) 
    print(f"a) {a}")

    # potencias de 2
    b = [2, 4, 8, 16, 32, 64]
    b.append(b[-1] * 2)  
    print(f"b) {b}")

    # numeros quadrados 
    c = [0, 1, 4, 9, 16, 25, 36]
    c.append(len(c) ** 2)  
    print(f"c) {c}")

    # quadrados multiplos de 4 
    d = [4, 16, 36, 64]
    d.append((len(d) + 1) ** 2) 
    print(f"d) {d}")

    # fibonacci
    e = [1, 1, 2, 3, 5, 8]
    e.append(e[-1] + e[-2]) 
    print(f"e) {e}")

    # numeros consecutivos
    f = [2, 10, 12, 16, 17, 18, 19]
    f.append(20)  
    print(f"f) {f}")

sequencias()

